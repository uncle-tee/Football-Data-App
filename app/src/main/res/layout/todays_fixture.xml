<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/textView_match_status"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="FINISHED"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/match_status_text_size"
        android:textStyle="bold"
        android:typeface="normal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_match_end_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="19:00"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/match_status_text_size"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/textView_match_status"
        app:layout_constraintTop_toBottomOf="@+id/textView_match_status" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="MD:35"
        android:textColor="@color/colorGrey"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/textView_match_end_time"
        app:layout_constraintTop_toBottomOf="@+id/textView_match_end_time" />

    <TextView
        android:id="@+id/textView_home_team"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Stade Brestois"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/textView_home_team_score"
        app:layout_constraintStart_toEndOf="@+id/textView_match_status"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_home_team_score"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:text="0"
        android:textColor="@android:color/black"
        android:textSize="@dimen/match_status_text_size"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_away_team"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Clermont Foot Auverge"
        android:textColor="@android:color/black"
        android:textSize="@dimen/team_text_size"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/textView_home_team"
        app:layout_constraintStart_toStartOf="@+id/textView_home_team"
        app:layout_constraintTop_toBottomOf="@+id/textView_match_end_time" />

    <TextView
        android:id="@+id/textView_away_team_score"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="0"
        android:textColor="@android:color/black"
        android:textSize="@dimen/match_status_text_size"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/textView_away_team"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:text="00"
        android:textColor="@color/colorGrey"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/textView_away_team_score"
        app:layout_constraintEnd_toStartOf="@+id/textView_away_team_score"
        app:layout_constraintTop_toBottomOf="@+id/textView_home_team_score" />

</android.support.constraint.ConstraintLayout>